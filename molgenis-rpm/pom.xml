<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.molgenis</groupId>
    <artifactId>molgenis</artifactId>
    <version>8.5.0-SNAPSHOT</version>
  </parent>
  <artifactId>molgenis-rpm</artifactId>
  <packaging>rpm</packaging>

  <name>molgenis</name>
  <description>Module used to produce the MOLGENIS RPM artifact</description>

  <distributionManagement>
    <repository>
      <id>${registry.id}</id>
      <url>https://registry.molgenis.org/repository/yum-releases</url>
    </repository>
  </distributionManagement>

  <properties>
    <maven.deploy.skip>true</maven.deploy.skip>
    <rpm.disabled>true</rpm.disabled>
    <rpm.name>molgenis</rpm.name>
    <rpm-maven-plugin.version>2.2.0</rpm-maven-plugin.version>
  </properties>

  <build>
    <plugins>
      <!-- retrieve dependencies -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- create an RPM artifact of MOLGENIS -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>${rpm-maven-plugin.version}</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>default</id>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <disabled>${rpm.disabled}</disabled>
          <license>Apache License 2.0</license>
          <group>Application/Collectors</group>
          <packager>MOLGENIS</packager>
          <name>molgenis</name>
          <prefix>/usr/local</prefix>
          <changelogFile>CHANGELOG.md</changelogFile>
          <defineStatements>
            <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
          </defineStatements>
          <needarch>false</needarch>
          <targetOS>linux</targetOS>
          <mappings>
            <mapping>
              <directory>/usr/local/share/molgenis</directory>
              <filemode>770</filemode>
              <username>molgenis</username>
              <groupname>molgenis</groupname>
            </mapping>
            <mapping>
              <directory>/usr/local/share/molgenis/war</directory>
              <filemode>755</filemode>
              <username>molgenis</username>
              <groupname>molgenis</groupname>
              <sources>
                <source>
                  <location>target/dependency/molgenis-app-${project.version}.war</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/local/share/molgenis/templates</directory>
              <filemode>700</filemode>
              <username>molgenis</username>
              <groupname>molgenis</groupname>
              <sources>
                <source>
                  <location>rpm/templates/molgenis-server.properties</location>
                </source>
              </sources>
            </mapping>
          </mappings>
          <preinstallScriptlet>
            <scriptFile>rpm/preinstall.bash</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </preinstallScriptlet>
          <postinstallScriptlet>
            <scriptFile>rpm/postinstall.bash</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </postinstallScriptlet>
        </configuration>
      </plugin>
      <plugin>
        <!-- By default, do not deploy rpm to nexus -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>${maven.deploy.skip}</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.molgenis</groupId>
      <artifactId>molgenis-app</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>
</project>
